---
import Layout from "../layouts/Layout.astro"

import AboutMe from "../components/AboutMe.astro"
import Badge from "../components/Badge.astro"
import Briefcase from "../components/icons/Briefcase.astro"
import CodeIcon from "../components/icons/Code.astro"
import Experience from "../components/Experience.astro"
import GitHubIcon from "../components/icons/GitHub.astro"
import LinkedInIcon from "../components/icons/Linkedin.astro"
import MailIcon from "../components/icons/Mail.astro"
import ProfileCheck from "../components/icons/ProfileCheck.astro"
import Projects from "../components/Proyects.astro"
import SectionContainer from "../components/SectionContainer.astro"
import SocialPill from "../components/SocialPill.astro"
---

<Layout
	title="Porfolio de Lucas G Villalba - Data Analyst/Scientist"
	description="Contrata a midudev para crear tu aplicación web o móvil. Desarrollador Web y Creador de Contenido. Especializado en crear aplicaciones únicas."
>
	<main class="px-4">
		<SectionContainer class="py-44 pb-32">
			<img
				class="rounded-full size-12 mb-4"
				src="https://media.licdn.com/dms/image/D4D35AQG0LIw4D8CMHg/profile-framedphoto-shrink_400_400/0/1704907183089?e=1706396400&v=beta&t=2CZf40tV1dhStUO8M1vysbAnZWpRNSvI8WuQjNw4ytg"
				alt="lucas photo"
			/>
			<h1
				class="text-gray-100 dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
			>
				Buenas!Soy Lucas  <a
					href="https://www.linkedin.com/in/lucasgvillalba/"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center hover:scale-105 transition"
				>
					<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2
				class="text-xl lg:text-xl text-balance max-w-[900px] text-white dark:text-white"
			>
				<span>Estudiante Licenciatura Ciencia de Datos - UCASAL. </span><span
					class="text-yellow-400 "
				>
					Cientifico & Analista de Datos </span
				>
				.<span class="text-red-600 dark:text-red-200">
					De Salta, Argentina </span
				>.
				<span class="text-sky-600 dark:text-sky-200"
					>Apasionado por los datos  </span
				>.
			</h2>

			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill href="https://www.linkedin.com/in/lucasgvillalba/">
					<LinkedInIcon class="size-4 md:size-6" />
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/lucasgvillalba">
					<GitHubIcon class="size-4 md:size-6" />
					GitHub
				</SocialPill>
				<SocialPill href="mailto:lucasvillalba691@gmail.com">
					<MailIcon class="size-4 md:size-6" />
					lucasvillalba691@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>

		<SectionContainer id="experiencia">
			<h2
				class="text-3xl font-semibold mb-6 flex gap-x-3 items-center  dark:text-white/80"
			>
				<Briefcase class="size-7" />
				Educación - Conocimientos
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2
				class="text-3xl font-semibold mb-6 flex gap-x-3 items-center  dark:text-white/80"
			>
				<CodeIcon class="size-7" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>

		<SectionContainer id="sobre-mi">
			<h2
				class="text-3xl font-semibold mb-6 flex gap-x-3 items-center  dark:text-white/80"
			>
				<ProfileCheck class="size-7" />
				Sobre mi
			</h2>
			<AboutMe />
		</SectionContainer>
	</main>
</Layout>