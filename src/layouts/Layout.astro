---
import "@fontsource-variable/onest"

import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"

interface Props {
	title: string
	description: string
}

const { description, title } = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/dist/proyects/analisis.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>	
	</head>

	<body class="text-white white:text-white">
		<div
		class="relative h-full w-full bg-slate-101"><div class=" bg-[radial-gradient(circle_500px_at_50%_200px,#3e3e3e,transparent)]"
		>
		</div>
		<Header />
		<slot />
		<Footer />	
	</body>
</html>

<style is:global>
:root {
		color-scheme: light dark;
	}

	html {
    font-family: "Onest Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
	}

	body {
	background: rgba(21, 21, 44, 0.419);
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    overscroll-behavior: none;
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}

	@media (prefers-color-scheme: dark) {
		body {
		color: rgba(7, 7, 7, 0);
		}
	}
</style>